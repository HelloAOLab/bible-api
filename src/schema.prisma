datasource db {
    provider = "sqlite"
    url      = "file:../build/bible.db"
}

generator client {
    provider = "prisma-client-js"
}

model Translation {
    id           String @id
    name         String
    website String
    licenseUrl String
    shortName String?
    englishName String
    language String
    textDirection String
    
    books        Book[]
    chapters     Chapter[]
    verses       ChapterVerse[]
    footnotes    ChapterFootnote[]
}

model Book {
    id String

    translationId String
    translation Translation @relation(fields: [translationId], references: [id])

    name String
    commonName String
    title String?
    order Int

    numberOfChapters Int

    chapters Chapter[]
    verses ChapterVerse[]
    footnotes ChapterFootnote[]

    @@id([translationId, id])
}

model Chapter {
    number Int

    bookId String
    book Book @relation(fields: [translationId, bookId], references: [translationId, id])

    translationId String
    translation Translation @relation(fields: [translationId], references: [id])

    apiLink String
    json String // The JSON of the chapter

    verses ChapterVerse[]
    footnotes ChapterFootnote[]

    previousChapterTranslationId String?
    previousChapterBookId String?
    previousChapterNumber Int?
    previousChapter Chapter? @relation(fields: [previousChapterTranslationId, previousChapterBookId, previousChapterNumber], references: [translationId, bookId, number], name: "fk_previousChapter")
    nextChapter Chapter? @relation(name: "fk_previousChapter")

    @@id([translationId, bookId, number])
    @@unique([previousChapterTranslationId, previousChapterBookId, previousChapterNumber])
}

model ChapterVerse {
    number Int

    chapterNumber Int
    chapter Chapter @relation(fields: [translationId, bookId, chapterNumber], references: [translationId, bookId, number])

    bookId String
    book Book @relation(fields: [translationId, bookId], references: [translationId, id])

    translationId String
    translation Translation @relation(fields: [translationId], references: [id])

    text String // The text of the verse
    contentJson String // The JSON of the verse content

    footnotes ChapterFootnote[]

    @@id([translationId, bookId, chapterNumber, number])
}

model ChapterFootnote {
    id Int

    chapterNumber Int
    chapter Chapter @relation(fields: [translationId, bookId, chapterNumber], references: [translationId, bookId, number])

    bookId String
    book Book @relation(fields: [translationId, bookId], references: [translationId, id])

    translationId String
    translation Translation @relation(fields: [translationId], references: [id])

    text String

    verseNumber Int?
    verse ChapterVerse? @relation(fields: [translationId, bookId, chapterNumber, verseNumber], references: [translationId, bookId, chapterNumber, number])

    @@id([translationId, bookId, chapterNumber, id])
}
