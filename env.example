# Bible API Docker Configuration
# Copy this file to .env and customize as needed

# Database Configuration
# URL to download the database from if it doesn't exist
BIBLE_DB_SOURCE_URL=https://bible.helloao.org/bible.db

# Database path inside the container
BIBLE_DB_PATH=/app/db/bible-api.db

# Minimum database file size in bytes (to verify download)
BIBLE_DB_MIN_SIZE=1000

# API Generation Configuration
# Path where API files will be generated
API_OUTPUT_PATH=/app/api

# Whether to overwrite existing API files
API_OVERWRITE=true

# Whether to pretty-print JSON files
API_PRETTY_PRINT=true

# Node.js Environment
NODE_ENV=production

# Nginx Configuration
# Port to expose nginx on the host
NGINX_PORT=80

# CORS Configuration
# Comma-separated list of allowed origins (use * for all)
CORS_ALLOW_ORIGIN=*

# Optional: Specific translations to generate (comma-separated)
# Leave empty to generate all translations
# API_TRANSLATIONS=

# Optional: Batch size for processing translations
# API_BATCH_SIZE=50

# AWS Configuration (for S3 uploads - optional)
# AWS_PROFILE=aolabs
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
